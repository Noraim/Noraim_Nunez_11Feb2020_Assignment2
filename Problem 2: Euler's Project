//Euler's Problem; Summing positive multiples of 3 or 5 less than 1000.

#include <iostream>
#include <vector>
#include <math.h>

using namespace std;
int main(){

//Declaring my variables 
float x;
float y;
float z;
float sum = 0;
float start = 1;
float end = 999;

//Applying loop to run through integers  ...note: x++ adds values to increase continously 

for (float x = start; x <= end; x++){

//If statement when dividing by 3. If the output is an integer, it will be added to the sum 
 y = x / 3;
  if (y==(int)y){
 sum += x;
}

// else statements when dividing by 5. If and testing if the output is an integer, it will be added to the sum 
  else{
  z = x / 5;
    if (z==(int)z){
    sum += x;
}
}
}
//Printing out the sum of all multiples of 3 or 5 up to 999
  cout<<sum<<endl;

  return 99;
}
